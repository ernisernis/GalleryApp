<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/lightBlueRV"
    android:layout_marginVertical="5dp"
    android:layout_height="91.5dp">

    <TextView
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/folderTitle"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="16dp"
        android:text="Folder name"
        android:textSize="28dp" />

    <TextView
        android:layout_marginTop="53dp"
        android:layout_marginLeft="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/folderCount"
        android:text="Folder Count" />

    <ImageView
        android:layout_marginTop="26.5dp"
        android:layout_marginLeft="335dp"
        android:id="@+id/arrow"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

    <ImageView
        android:background="@drawable/border"
        android:layout_gravity="center_vertical"
        android:id="@+id/singleImageFolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_image_not_supported_24" />

    <ImageView
        android:background="@drawable/border"
        android:layout_gravity="center_vertical"
        android:paddingHorizontal="25dp"
        android:id="@+id/singleImageFolder2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_baseline_image_not_supported_24" />
</androidx.cardview.widget.CardView>