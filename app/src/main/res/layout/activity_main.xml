<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/darkBlueBG"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <TextView
        android:layout_marginBottom="20dp"
        android:textSize="35sp"
        android:text="GalleryApp"
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:padding="20dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/linearLayoutContainer"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/txtView"
            android:src="@drawable/fingerprint_dialog_fp_icon"
            app:tint="@color/whiteText" />


        <TextView
            android:id="@+id/txtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use your fingerprint to unlock" />

        <TextView
            android:id="@+id/txtView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Click on the Fingerprint*" />
    </LinearLayout>
